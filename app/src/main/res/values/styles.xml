<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomRow">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/rowBg</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="CustomSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/colorPrimary</item>
        <item name="android:progressTint">@color/colorPrimary</item>
        <item name="android:thumbTint">@color/colorPrimary</item>
    </style>

    <style name="LeadingText">
        <item name="android:fontFamily">@font/moonglade_bold</item>
    </style>

    <style name="CalculatedText">
        <item name="android:background">@color/calculatedValuesBg</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0.35</item>
    </style>

    <style name="TotalText" parent="CalculatedText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
